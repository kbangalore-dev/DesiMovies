<UserControl
    x:Class="DesiMovies.Layouts.Controls.AdvertisingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"	
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d"
       >
    <Grid>
        <Grid>
           <!-- <Universal:AdMediatorControl x:Name="adControl1" Width="{x:Bind BannerWidth}" Height="{x:Bind BannerHeight}" HorizontalAlignment="Center"/>
        -->
          <UI:AdControl 
                    x:Name="adcontrol1"
                    ApplicationId="9wzdncrdx48s"
                    AdUnitId="ctrl-9wzdncrdx48s-1"
                    Width="{x:Bind BannerWidth}" 
                    Height="{x:Bind BannerHeight}" 
                    HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
